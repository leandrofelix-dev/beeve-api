generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("SQLITE_URL")
}

model Role {
  id          String  @id @default(uuid())
  name        String
  description String
  User        User?   @relation(fields: [userId], references: [id])
  userId      String?
}

model User {
  id              String         @id @default(uuid())
  firstName       String
  lastName        String
  dateOfBirth     DateTime       @default(now())
  email           String         @unique
  password        String
  profilePicUrl   String?
  isExternal      Boolean
  studentCode     String?
  course          String?
  semesterOfEntry String?
  Registrations   Registration[]
  createdEvents   Event[]
  roles           Role[]

  @@map("users")
}

model Event {
  id              String         @id @default(uuid())
  name            String
  idCreator       String
  date            DateTime
  address         String
  description     String
  maxParticipants Int
  eventCode       String         @unique
  isPublic        Boolean
  coverUrl        String?
  creator         User           @relation(fields: [idCreator], references: [id] )
  Registrations   Registration[]  

  @@map("events")
}

model Registration {
  id          String @id @default(uuid())
  idUser      String
  idEvent     String
  participant User   @relation(fields: [idUser], references: [id] )
  event       Event  @relation(fields: [idEvent], references: [id], onDelete: Cascade)

  @@map("registrations")
}
